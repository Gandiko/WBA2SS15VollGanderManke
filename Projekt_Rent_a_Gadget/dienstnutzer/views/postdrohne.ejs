                            verfugbar: $("#verfugbar").val(),
                            besitzer: $("#username").val(),
                            u_id: Uid
                        };
                
                        if(temp == true){ 
                            $.ajaxSetup({
                                contentType: "application/json; charset=utf-8"
                            });

                            $.ajax({
                                type: 'POST',
                                host: 'localhost',
                                port: 3001,
                                url: '/postdrohne',
                                data: JSON.stringify(newDrohnen),
                                success: function(data){
                                    alert("Drohnen wurden angelegt!");
                                }
                            }).fail(function(e){
                                alert("fehler");
                            });
                            event.preventDefault();
                        
                        } else {
                            alert("Username und/oder Passwort wurden falsch eingegeben!");
                        }
                    }
                }).fail(function(data){
                    alert("failure"); 
                });
            });
    });
