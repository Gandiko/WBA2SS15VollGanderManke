                                if(element.username === $('#username').val() && element.passwort == $('#passwort').val()){
                                    temp = true;
                                    Uid = element.u_id
                            }
                        });
                        var newDrohnen = {
                            hersteller: $("#hersteller").val(),
                            modell: $("#modell").val(),
